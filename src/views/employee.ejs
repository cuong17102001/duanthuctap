          <a class="nav-link" href="/">Nhân viên <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/totalpoint">Điểm thưởng</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/criteria">Quản lý tiêu chí</a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <a class="btn btn-danger my-2 my-sm-0" href="/logout" type="submit">Đăng xuất</a>
      </form>
    </div>
  </nav>


  <div class="content">
    <div class="container">
      <h1>Điểm Nhân viên tháng <%=month%></h1>
        <form class="mt-3 mb-3" action="/totalpoint" method="get">
            <div class="row">
              
              <select class="custom-select col-lg-2" name="month">
                <% for(let i=1 ; i<=12 ; i++){ %>
                <option value="<%=i%>"
                  <% if(month == i){ %>
                    selected
                    <%}%>
                  > Tháng <%=i%></option>
                <% } %>
              </select>
              <select class="custom-select col-lg-2" name="sort" id="">
                <option value="DESC" 
                <% if(sort == "DESC"){ %>
                  selected
                  <%}%>
                >Điểm cao nhất</option>
                <option value="ASC"
                <% if(sort == "ASC"){ %>
                  selected
                  <%}%>
                >Điểm thấp nhất</option>
              </select>
              <button class="btn btn-primary">Xem</button>
            </div>
        </form>
      
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Tên nhân viên</th>
            <th scope="col">Điểm</th>
          </tr>
        </thead>
        <tbody>
          <% let index = 1;  for(let i in pointTotal){ %>
          <tr>
            <th scope="row"><%=index %></th>
            <td>
              <% for(let j=0 ; j<employee.length ; j++){ %>
                <%if(employee[j].id == pointTotal[i].idEmployee){ %>
                  <%=employee[j].name%>
                  <%} %>
                <%} %>
              </td>
            <td><%=pointTotal[i].total %></td>
          </tr>
          <% index++ } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
